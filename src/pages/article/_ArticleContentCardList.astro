---
import { findManyArticle } from '#@/feature/article/repository/findManyArticle.js'
import { CardGrid, LinkCard } from '@astrojs/starlight/components'

const articleList = await findManyArticle({
  includesDraft: import.meta.env.DEV,
})
---

<CardGrid>
  {/* バグでフォーマットが安定しない */}
  <!-- markup-fmt-ignore -->
  {articleList.map(article => <LinkCard href={`/${article.slug}`} title={article.data.title} />)}
</CardGrid>
